.container{
	width:calc(100vw);
	height:calc(100vh);
}
.seachfood {
	width:100%;
	height:100rpx;
	display:flex;
	flex-direction:row;
	justify-content:center;
	align-items:center;
}
.seachintputbox{
	width:600rpx;
	height:60rpx;
	border-radius:60rpx;
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	align-items:center;
	border:1rpx solid rgb(218, 220, 224,1);
	background:rgba(240, 240, 245,0.5);
	color:rgb(218, 220, 224,1);
}
.searchicon{
	margin-left:10rpx;
	font-size:40rpx;
	color:rgb(218, 220, 224,1);
}
.searchtip{
	font-size:25rpx;
}
.serviceicon{
	font-size:50rpx;
	margin-left:20rpx;
}
.allfood{
	width:100%;
	height:calc(100% - 100rpx);
	position:relative;
}
.classifyforfoodbox{
	width:100%;
	height:80rpx;
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	align-items:center;
	position:relative;
}
.classifyforfoodbox .bottomline{
	width:100%;
	position:absolute;
	bottom:0rpx;
	border-bottom:1rpx solid  rgba(117, 117, 117,0.8);
	transform:scaleY(0.25);
}
.zhankaiicon{
	width:8%;
	height:100%;
	display:flex;
	flex-direction:row;
	justify-content:center;
	align-items:center;
	font-size:40rpx;
	color:rgba(50,50,50,1);
}
.classifyforfood{
	width:92%;
	height:80rpx;
}
::-webkit-scrollbar{
  display:none;
}
.classifyforfoodtabbox{ 
	height:100%;
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	align-items:center;
}
.classifyforfoodtab{
	margin-left:30rpx;
	width:120rpx;
	height:40rpx;
	font-size:28rpx;
	font-weight:600;
	display:flex;
	flex-direction:row;
	justify-content:flex-end;
	align-items:center;
}
.classifyforfoodtabactiveactive{
	color:#23B022;
}
.foodconent{
	width:100%;
	height:calc(100% - 82rpx);
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	align-items:flex-start;
}
.lefttab{
	width:150rpx;
	height:100%;
	background:rgba(240, 240, 245,0.5);
}
::-webkit-scrollbar{
  display:none;
}
.meuntab{
	font-size:25rpx;
	height:100rpx;
	width:100%;
	display:flex;
	justify-content:center;
	align-items:center;
	color:rgb(50, 50, 50,0.8);
}
.meuntabactive{
	background:rgba(255,255,255,1);
	color:rgba(35, 176, 34,1);
}
.layer{
	width:100%;
	height:100%;
	position:absolute;
	top:0rpx;
	left:0rpx;
	z-index:1;
	background:rgba(0,0,0,0.3);
}
.layerclassifyforfoodbox{
	width:100%;
}
.layertitle_closeicon{
	width:100%;
	height:70rpx;
	background:rgba(255,255,255,1);
	display:flex;
	flex-direction:row;
	justify-content:space-between;
	align-items:center;
}
.layertitle{
	margin-left:20rpx;
	font-size:30rpx;
	font-weight:600;
}
.closeicon{
	margin-right:20rpx;
	font-size:40rpx;
	font-weight:600;
}
.layertabbox{
	width:100%;
	height:auto;
	background:rgba(255,255,255,1);
	display:flex;
	flex-direction:row;
	justify-content:space-around;
	align-items:flex-start;
	flex-wrap:wrap;
}
.layerfoodtab{
	width:200rpx;
	border:1rpx solid red;
	display:flex;
	flex-direction:row;
	justify-content:center;
	align-items:center;
	padding:10rpx 10rpx 14rpx 10rpx;
	border-radius:50rpx;
	margin-bottom:20rpx;
	border:1rpx solid rgba(165, 166, 166,1);
	color:rgba(165, 166, 166,1);
	font-size:30rpx;
}
.layerfoodtabactiveactive{
	border:1rpx solid rgba(35, 176, 34,1);
	color:rgba(35, 176, 34,1);
}

.rightconent{
	width:calc(100% - 150rpx);
	height:100%;
}
.foodlistbox{
	width:100%;
	height:auto;
	position:relative;
}
.specification{
	width:100%;
	height:auto;
	display:flex;
	flex-direction:column;
	justify-content:;
	align-items:flex-end;
}
.specificationcontent{
	width:calc(100% - 125rpx);
	height:80rpx;
	display:flex;
	flex-direction:row;
	justify-content:space-between;
	align-items:center;
	position:relative;
}
.specificationcontent >.bottomline{
	position:absolute;
	left:0rpx;
	bottom:0rpx;
	width:100%;
	border-bottom:1rpx solid rgba(117, 117, 117,0.8);
	transform:scaleY(0.3);
}
.specificationcontent >.specificationprice{
	margin-left:150rpx;
	font-size:25rpx;
	color:rgba(165, 166, 166,1);
	
}
.specificationcontent >.specificationprice >.weight{
	font-size:15rpx;
	color:rgba(165, 166, 166,1);
}
.specificationcontent >.filliconadd{
	margin-right:20rpx;
	font-size:45rpx;
	color:rgba(35, 176, 34,1);
}
.specificationcontent >.foodNumber{
	margin-right:20rpx;
	display:flex;
	flex-direction:row;
	justify-content:space-between;
	align-items:center;
}
.specificationcontent >.foodNumber .foodNumbericon{
	font-size:45rpx;
	color:rgba(35, 176, 34,1);
}
.specificationcontent >.foodNumber span{
	margin-left:20rpx;
	margin-right:20rpx;
	font-size:30rpx;
	color:rgba(165, 166, 166,1);
}
.foodlistbox >.bottomline{
	position:absolute;
	left:0rpx;
	bottom:0rpx;
	width:100%;
	border-bottom:1rpx solid rgba(117, 117, 117,0.8);
	transform:scaleY(0.3);
}
.foodlist{
	width:100%;
	height:150rpx;
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	align-items:center;
}

.foodlistimage{
	margin-left:25rpx;
	width:100rpx;
	height:100rpx;
}
.fooddetail{
	margin-left:25rpx;
	width:calc(100% - 150rpx);
	height:100rpx;
	display:flex;
	flex-direction:column;
	justify-content:space-around;
	align-items:flex-start;
}
.foodname{
	font-size:30rpx;
	font-weight:600;
	width:100%;
}
.foodpricebox{
	width:100%;
	display:flex;
	flex-direction:row;
	justify-content:space-between;
	align-items:center;
}
.foodprice{
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	align-items:center;
	color:rgba(232, 47, 40,1)
}
.foodprice >.price{
	font-size:25rpx;
	font-size:600;
}
.foodprice >.lable{
	margin-left:10rpx;
	font-size:15rpx;
}
.foodpricebox > .sizebtn{
	display:flex;
	flex-direction:row;
	justify-content:center;
	align-items:center;
	margin-right:20rpx;
	font-size:15rpx;
	padding:10rpx 20rpx 10rpx 20rpx;
	color:rgba(255,255,255,1);
	background:rgba(35, 176, 34,1);
	border-radius:20rpx;
}
