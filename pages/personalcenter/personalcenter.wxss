/**index.wxss**/
.mian{
	width:100vw;
	height:100vh;
	background:rgba(241, 241, 241,1);
}
.container {
	width:100%;
	height:auto;
	display:flex;
	flex-direction:column;
	justify-content:flex-start;
	align-items:center;
}
.container .userInfo{
	width:100%;
	height:200rpx;
	background: linear-gradient(to bottom, rgba(7, 193, 96,1) 0%,rgba(7, 193, 96,0.5) 100%);
	border-bottom-left-radius:20rpx;
	border-bottom-right-radius:20rpx;
	display:flex;
	flex-direction:column;
	justify-content:flex-start;
	align-items:center;
}
.userInfo .userMsg{
	width:80%;
	height:100rpx;
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	align-items:flex-start;
}
.userMsg image{
	width:100rpx;
	height:100rpx;
	border-radius:50%;
}
.userMsg span{
	margin-top:10rpx;
	margin-left:30rpx;
	font-size:30rpx;
	font-weight:600;
	color:rgba(255,255,255,1);
	border-radius:50%;
}
.userInfo .userBenefit{
	width:80%;
	height:100rpx;
	display:flex;
	flex-direction:row;
	justify-content:space-around;
	align-items:center;
}
 .userBenefit .userBenefitlabel{
	 display:flex;
	 flex-direction:column;
	 justify-content:flex-start;
	 align-items:center;
	 font-size:25rpx;
	 font-weight:600;
	 color:rgba(255,255,255,1);
 }
.myOrder{
	width:95%;
	height:auto;
	background:rgba(255,255,255,1);
	border-radius:10rpx;
	margin-top:20rpx;
	display:flex;
	flex-direction:column;
	justify-content:flex-start;
	align-items:center;
	padding:0rpx 0rpx 25rpx 0rpx;
}
.myOrder .title{
	width:90%;
	height:80rpx;
	display:flex;
	flex-direction:row;
	justify-content:space-between;
	align-items:center;
	position:relative;
}
.myOrder .title .bottomline{
	position:absolute;
	bottom:0rpx;
	width:100%;
	border-bottom:1rpx solid rgba(117, 117, 117,0.8);
	transform:scaleY(0.25);
}
.myOrder .title span{
	font-size:25rpx;
	font-weight:600;
}
.myOrder .title .righticonarrow{
	font-size:30rpx;
	color:rgba(91, 94, 97,1);
	
}
.myOrder .orderMeun{
	width:90%;
	height:auto;
	display:flex;
	flex-direction:row;
	justify-content:space-between;
	align-items:center;
	flex-wrap:wrap;
}
.myOrder .orderMeun .meun{
	width:20%;
	margin-top:10rpx;
	display:flex;
	flex-direction:column;
	justify-content:flex-start;
	align-items:center;
}
.myOrder .orderMeun .meun span{
	font-size:20rpx;
	color:rgba(91, 94, 97,1);
}
.myOrder .orderMeun .meun i{
	font-size:60rpx;
}

